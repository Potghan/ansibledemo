- hosts: all   tasks:   - name: Print the ansible_os_family value     debug:       msg: '{{ ansible_os_family }}'   - name: Ensure the httpd package is updated     yum:       name: httpd       state: latest     become: True     when: ansible_os_family == 'RedHat'   - name: Ensure the apache2 package is updated     apt:       name: apache2       state: latest     become: True     when: ansible_os_family == 'Debian'  - hosts: all   tasks:   - name: Count processes running on the remote system     shell: ps | wc -l     register: remote_processes_number   - name: Print remote running processes     debug:       msg: '{{ remote_processes_number.stdout }}'   - name: Count processes running on the local system     shell: ps | wc -l     delegate_to: localhost     register: local_processes_number   - name: Print local running processes     debug:       msg: '{{ local_processes_number.stdout }}' 
